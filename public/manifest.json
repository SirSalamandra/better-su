{
  "manifest_version": 3,
  "name": "Visited URLs Tracker",
  "version": "1.0",
  "description": "Tracks URLs accessed within a website and marks them visually.",
  "permissions": ["tabs", "storage", "activeTab", "scripting", "webNavigation"],
  "host_permissions": ["https://kemono.su/*", "https://coomer.su/*"],
  "background": {
    "service_worker": "dist/background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://kemono.su/*", "https://coomer.su/*"],
      "js": ["dist/content.js"],
      "css": ["styles.css"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}
